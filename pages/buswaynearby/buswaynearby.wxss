/**车辆显示框**/

.main-content{
  width: 100%;
  height: 180rpx;
  margin: 0;
  padding: 0;
}
.item-content{
  width: 96%;
  height: 150rpx;
  padding: 2%;
}
.item-main{
  width:100%;
  height: 100%;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  background: white;

  display: flex;
  display: -webkit-flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: center;
}

.item-main text{
  font-size: 25rpx;
}


.body-item {background: white;width:100%; height: 100%;}
